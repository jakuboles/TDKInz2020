<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDK.LoginPage"
             BackgroundColor="{StaticResource standardBackground}">

    <StackLayout VerticalOptions="Center"
                 Margin="20,0">
        <Entry x:Name="emailEntry"
               Placeholder="Email"
               PlaceholderColor="{StaticResource whiteFlagKepno}"
               Keyboard="Email"
               TextColor="{StaticResource whiteFlagKepno}"/>

        <Entry x:Name="passwordEntry"
               Placeholder="Hasło"
               PlaceholderColor="{StaticResource whiteFlagKepno}"
               IsPassword="True"
               TextColor="{StaticResource whiteFlagKepno}"/>

        <Button x:Name="loginButton"
                Text="Zaloguj"
                BackgroundColor="{StaticResource greenFlagKepno}"
                TextColor="{StaticResource whiteFlagKepno}"
                BorderWidth="0"
                Clicked="LoginButton_Clicked"/>

        <Button x:Name="registerButton"
                Text="Zarejestruj"
                BackgroundColor="Transparent"
                TextColor="{StaticResource blueFlagKepno}"
                HorizontalOptions="End"
                Margin="10, 0"
                Clicked="RegisterButton_Clicked"/>
    </StackLayout>
</ContentPage>