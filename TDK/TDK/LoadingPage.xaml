<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDK.LoadingPage"
             BackgroundColor="{StaticResource standardBackground}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ładowanie..."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                TextColor="{StaticResource whiteFlagKepno}"
                FontSize="40"
                x:Name="labelLoading"/>
            <Label Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                TextColor="{StaticResource whiteFlagKepno}"
                x:Name="labelInformation"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>